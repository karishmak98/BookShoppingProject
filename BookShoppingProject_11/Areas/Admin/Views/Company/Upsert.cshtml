@model BookShoppingProject.Models.Company
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Company" : "Create New Company";
}

<form method="post">
    <div class="row border">
        <div class="col-12">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 border rounded p-3">
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="IsAuthorizedCompany"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsAuthorizedCompany" />
                    <span asp-validation-for="IsAuthorizedCompany"></span>
                </div>
            </div>
            <div class="form-group row p-2">
                <div class="col-8 offset-4">
                    @if (Model.Id == 0)
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}

